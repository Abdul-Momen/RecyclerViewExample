<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/iv_details_image_id"
        android:layout_width="268dp"
        android:layout_height="257dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_details_name_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lunce1" />

    <TextView
        android:id="@+id/tv_details_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_details_like_id"
        app:layout_constraintStart_toStartOf="@+id/iv_details_image_id"
        app:layout_constraintTop_toBottomOf="@+id/iv_details_image_id" />

    <TextView
        android:id="@+id/tv_details_like_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="372dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_name_id"
        app:layout_constraintStart_toStartOf="@+id/tv_details_name_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_details_name_id" />

</androidx.constraintlayout.widget.ConstraintLayout>